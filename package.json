{
    "name": "ra-input-media",
    "version": "0.0.3",
    "description": "Media inputs components for react-admin, useful for input and preview images and videos in admin GUIs.",
    "main": "lib/index.js",
    "module": "esm/index.js",
    "sideEffects": false,
    "files": [
        "LICENSE",
        "*.md",
        "lib",
        "esm",
        "src",
        "src/ImageInput/main.css"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyMain/ra-input-media.git"
    },
    "author": "Carlos Garrido",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/EasyMain/ra-input-media/issues"
    },
    "homepage": "https://github.com/EasyMain/ra-input-media#readme",
    "scripts": {
        "build": "yarn run build-cjs && yarn run build-esm && yarn run copy-files",
        "build-cjs": "rimraf ./lib && tsc",
        "build-esm": "rimraf ./esm && tsc --outDir esm --module es2015",
        "copy-files": "copyfiles -u 1 src/**/*.css ./lib/ ./esm/",
        "watch": "tsc --outDir esm --module es2015 --watch"
    },
    "peerDependencies": {
        "@material-ui/core": "^4.12.3",
        "ra-core": "^3.17.2",
        "ra-ui-materialui": "^3.17.2",
        "react": "^16.9.0 || ^17.0.0",
        "react-dom": "^16.9.0 || ^17.0.0",
        "react-dropzone": "^11.4.2"
    },
    "dependencies": {
        "react-admin": "^3.19.0",
        "swiper": "^7.0.6"
    },
    "devDependencies": {
        "copyfiles": "^2.4.1",
        "ra-core": "^3.18.2",
        "ra-ui-materialui": "^3.18.2",
        "react-redux": "^7.2.5",
        "rimraf": "^2.6.3"
    }
}
